@startuml architecture
skinparam componentStyle rectangle
skinparam shadowing false

[NGINX] <<load-balancer>>
[KrakenD] <<gateway>>

[NGINX] --> [KrakenD]

package "Auth Service" {
    component AuthAPI <<API>>
    component AuthLogic <<Logic>>
    file AuthDB <<SQLite>>

    AuthAPI --> AuthLogic
    AuthLogic --> AuthDB
    [KrakenD] --> AuthAPI
}

