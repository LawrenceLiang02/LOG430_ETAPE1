    SaleAPI --> SaleLogic
    SaleLogic --> SaleDB
    [KrakenD] --> SaleAPI
}

package "Product Service" {
    component ProductAPI <<API>>
    component ProductLogic <<Logic>>
    file ProductDB <<SQLite>>

    ProductAPI --> ProductLogic
    ProductLogic --> ProductDB
    [KrakenD] --> ProductAPI
